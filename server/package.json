    "mocha": "^5.2.0",
    "nodemon": "^1.18.2",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-plugin-dotenv-import": "^2.0.0",
    "bcrypt": "^3.0.3",
    "bigchaindb-driver": "^4.1.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-json-validator-middleware": "^1.2.3",
